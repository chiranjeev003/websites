<h2>@Model.Name</h2>
<h3>Membership Type: @Model.MembershipType.Name</h3>
@if (Model.BirthDate.HasValue)
{
    <h3>Date of Birth: @Model.BirthDate.Value.ToString("dd/MM/yyyy")</h3>
}